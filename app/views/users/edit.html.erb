<div class="row">
  <div class="col-md-3">
    <%= render partial: 'info.html.erb' %>
  </div>
  <div class="col-md-9">
    <%= bootstrap_form_for(@user, layout: :horizontal, :html => { :multipart => true }) do |f| %>
      <legend><%= t :personal_information %></legend>
      <%= f.text_field :username, label: t(:username) %>
      <%= f.text_field :realname, label: t(:realname) %>
      <%= f.text_field :email, label: t(:email) %>
      <%= f.file_field :avatar, label: t(:avatar) %>
      <%= f.submit t(:submit), class: 'btn btn-default form-control' %>
    <% end %>
    <br>
    <%= link_to t(:back), dashboard_path, class: 'btn btn-primary form-control' %>
  </div>
</div>
