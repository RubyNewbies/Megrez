<div class="row">
  <%= image_tag current_user.avatar, width: 250, height: 250, class: 'img-rounded' %>
  <hr>
  <h3><%= current_user.username %></h3>
  <h5><span class="fa fa-fw fa-envelope"></span> <%= current_user.email %></h5>
  <h5><span class="fa fa-fw fa-clock-o"></span> <%= t(:joined_on) %> <%= DateTime.parse(current_user.created_at.localtime.to_s).strftime('%Y-%m-%d').to_s %></h5>
  <hr>
</div>

<div class="row">
  <div id="action-bar">
    <div class="list-group">
      <%= active_link_to fa_icon("home", text: t(:dashboard), class: 'fa-fw fa-lg'), dashboard_path, class: "list-group-item" %>
      <%= active_link_to fa_icon("book", text: t(:course_management), class: 'fa-fw fa-lg'), courses_path, class: "list-group-item" %>
      <%= active_link_to fa_icon("database", text: t(:file_management), class: 'fa-fw fa-lg'), '/folders', class: "list-group-item" %>
      <%= active_link_to fa_icon("cogs", text: t(:account_setting), class: 'fa-fw fa-lg'), edit_user_path(id: current_user.id), class: "list-group-item" %>
    </div>
  </div>
  <%= link_to fa_icon("plus-square", text: t(:create_course), class: 'fa-fw fa-lg'), '/courses/new', class: "btn btn-primary btn-block" %>
</div>

