<div class="row">
  <div class="col-md-12">
    <% if @announcements %>
      <div id="course-announcement-board" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @announcements.each_with_index do |announcement, index| %>
            <% unless index >= 5 %>
              <% if index == 0 %>
                <li data-target="#course-announcement-board" data-slide-to="<%= index %>" class="active"></li>
              <% else %>
                <li data-target="#course-announcement-board" data-slide-to="<%= index %>"></li>
              <% end %>
            <% end %>
          <% end %>
        </ol>

        <div class="carousel-inner" role="listbox">
          <% @announcements.each_with_index do |announcement, index| %>
            <% unless index >= 5 %>
              <% if index == 0 %>
                <div class="item active">
              <% else %>
                <div class="item">
              <% end %>
                <div style="width:100%;height:200px" class="btn-primary"></div>
                <div class="carousel-caption">
                  <h4 style="color:#fff"><%= announcement.content %></h4>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <a class="left carousel-control" href="#course-announcement-board" role="button" data-slide="prev">
          <span class="fa fa-fw fa-chevron-left" style="margin-top:50%"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#course-announcement-board" role="button" data-slide="next">
          <span class="fa fa-fw fa-chevron-right" style="margin-top:50%"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% end %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-12">
    <% @activities.each do |activity| %>
      <%= render_activity activity %>
    <% end %>
  </div>
</div>