        </div>
        <div id="forum-sidebar-content" class="forum-sidebar-content">
          <%= render partial: 'nodes/index.html.erb' %>
        </div>
        <div class="forum-sidebar-footer">

          <button id='new_node' class='btn btn-primary btn-block' data-href=<%= new_course_node_path(course_id: params[:id], father_id: -1, format: 'js') %> >
            新建讨论区
          </button>

        </div>
      </div>

