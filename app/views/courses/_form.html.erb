<%= bootstrap_form_for(@course, layout: :horizontal) do |f| %>
  <fieldset>
    <legend><%= t :course_info %></legend>

    <%= f.text_field :full_name, label: t(:full_name), placeholder: t(:full_name) %>
    <%= f.text_field :english_name, label: t(:english_name), placeholder: 'Course English name(Optional)' %>

    <%= f.select :department_id, [[t(:dpt_cs), 1], [t(:dpt_se), 2]], { label: t(:dpt) }, { class: 'selectpicker'} %>

    <%= f.text_field :key, label: t(:key), placeholder: t(:key_placeholder) %>
    <%= f.text_area :description, label: t(:description), id: 'course_description', placeholder: t(:desc_placeholder) %>
    <%= f.file_field :icon, label: t(:icon) %>
    <%= f.submit class: 'btn btn-primary pull-right', value: t(:submit) %>

  </fieldset>
<% end %> 
