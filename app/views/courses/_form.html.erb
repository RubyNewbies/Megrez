<%= bootstrap_form_for(@course, layout: :horizontal) do |f| %>
  <fieldset>
    <legend>添加课程</legend>

    <%= f.text_field :full_name, label: '课程全名', placeholder: '课程全名' %>
    <%= f.text_field :english_name, label: '课名英文', placeholder: 'Course English name(Optional)' %>

    <%= f.select :department_id, [['计算机科学与技术', 1], ['软件工程', 2]], { label: '所属专业' }, { class: 'selectpicker'} %>

    <%= f.text_field :key, label: '选课密码', placeholder: '留空即可开放选课' %>
    <%= f.text_area :description, label: '课程描述', id: 'course_description', placeholder: '简要课程描述。' %>

    <%= f.submit class: 'btn btn-primary pull-right', value: '开设课程' %>

  </fieldset>
<% end %> 