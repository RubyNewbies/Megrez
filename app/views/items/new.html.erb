<div class="row">

  <div class="col-md-3">
    <%= render partial: 'courses/sidelist.html.erb', locals: {cid: params[:course_id]} %>
  </div>

  <div class="col-md-9 bs-component">
    <div class="row">
      <div class="col-md-12">
        <%= bootstrap_form_for @item, url: course_items_path, layout: :horizontal do |f| %>
          <legend><h1 class="text-center"><%= t :new_item %></h1></legend>
          <%= f.text_field :name, label: t(:name), class: 'form-control', placeholder: t(:name) %>
          <%= f.number_field :weight, label: t(:weight), class: 'form-control', placeholder: t(:weight) %>
          <%= f.hidden_field :father_id, value: '-1' %>
          <%= f.hidden_field :course_id, value: params[:course_id] %>
          <%= f.submit t(:submit), class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
