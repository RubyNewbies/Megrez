<div class="row">

  <div class="col-md-3">
    <%= render partial: 'courses/sidelist.html.erb', locals: {cid: params[:course_id]} %>
  </div>

  <div class="col-md-9">
    <%= bootstrap_form_for @announcement, url: course_announcements_path, layout: :horizontal do |f| %>
      <legend><h2 class="text-center"><%= t :new_announcement %></h2></legend>
      <%= f.text_area :content, label: t(:content), class: 'form-control' %>
      <%= f.hidden_field :course_id, value: params[:course_id] %>
      <%= f.submit t(:submit), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
