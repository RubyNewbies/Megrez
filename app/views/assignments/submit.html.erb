<div class="row">
  <div class="col-md-3">
    <%= render 'sidelist' %>
  </div>
  <div class="col-md-9">
    <legend><%= current_user.realname %> <%= t :is_submitting %> <%= @assignment.title %></legend>
    <%= form_for [@target_folder, @file], :url => folder_files_path(@target_folder) do |f| %>
      <p>
        <%= hidden_field_tag :target_folder_id, @target_folder.id %>
        <%= file_field_tag :attachment, :multiple => true, :name => 'user_file[attachment]' %>
      </p>
      <div id="progress">
      </div>
    <% end %>

    <script id="template-upload" type="text/x-tmpl">
    <p>
      <%= fa_icon 'spinner', :class => 'spinner fa-spin' %>
      <%= fa_icon 'times', :class => 'failed', :style => 'display:none;' %>
      <%= fa_icon 'check', :class => 'tick', :style => 'display:none;' %>
      <span class="status">Uploading <strong>{%= o.name %}</strong>...</span>
      <span class="percentage">0%</span>
      <span class="exists_message red" style="display:none;"><strong><%= t(:exists_already) %></strong></span>
    </p>
    </script>

  </div>
</div>
