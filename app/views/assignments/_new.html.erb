<%= form_for @assignment, url: course_assignments_path(course_id: params[:course_id]) do |f| %>
  <legend><%= t(:add_assignment) %></legend>
  <%= f.label :title, t(:title) %>
  <%= f.text_field :title, placeholder: t(:title), class: 'form-control' %>
  <br>
  <%= f.label :title, t(:description) %>
  <%= f.text_area :description, placeholder: t(:description), class: 'form-control' %>
  <br>
  <%= f.label :title, t(:due_to) %>
  <%= f.datetime_select :due_to %>
  <br>
  <br>
  <%= f.submit t(:submit_assignment), class: 'btn btn-primary' %>
<% end %>