<% @assignment ||= Assignment.new %>

<%= bootstrap_form_for(@assignment, layout: :horizontal) do |f| %>
  <fieldset>
    <legend><%= t(:add_assignment) %></legend>
    
    <%= f.text_field :title, label: t(:title), placeholder: t(:title) %>
    <%= f.text_area :description, label: t(:description), placeholder: t(:description) %>

    <%= f.datapicker :due_to, label: t(:due_to) %>

    <%= f.submit class: 'btn btn-primary pull-right', value: t(:submit_assignment) %>

  </fieldset>
<% end %> 
