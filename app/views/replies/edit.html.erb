<div class="well bs-component">

  <%= bootstrap_form_for(@reply, layout: :horizontal) do |f| %>
    <fieldset>
      <legend><%= t :edit_reply %></legend>
        
      <ul class="nav nav-tabs">
        <li class="active"><a href="#content_edit" data-toggle="tab" aria-expanded="false"><%= t :edit %></a></li>
        <li class=""><a href="#content_preview" data-toggle="tab" aria-expanded="true"><%= t :preview %></a></li>
      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="content_edit">    
          <%= f.text_area :source, id: 'content_source', rows: 8, placeholder: :placeholder %>
        </div>
        <div class="tab-pane fade" id="content_preview">
          somethings
        </div>
      </div>

      <%= f.submit %>
    </fieldset>
  <% end %>

</div>