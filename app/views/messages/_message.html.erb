<% if current_user.id == m.sender_id %>
  <div class="row">
    <div class="col-md-10 col-md-push-2">
      <div class="bubble arrow-right">
        <span class='tail'>&nbsp;</span>
        <span class='reply-author'><%= link_to "@#{m.sender.username}(#{m.sender.realname})", profile_path(m.sender.username) %></span>
        <div class="light-border">
          <%= m.content %>
        </div>
      <span class='reply-time'><%= fa_icon 'clock-o' %> <%= m.created_at.strftime('%Y-%m-%d %H:%M') %></span>
      </div>
    </div>
    <div class="pull-right" style="margin-right: 10px" >
      <%= image_tag current_user.avatar, width: 48, height: 48, class: 'reply-avatar' %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="pull-left" style="padding-left: 25px">
      <%= image_tag m.sender.avatar, width: 48, height: 48, class: 'reply-avatar' %>
    </div>
    <div class="col-md-10 col-md-offset-0">
      <div class="bubble arrow-left">
        <span class='tail'>&nbsp;</span>
        <span class='reply-author'><%= link_to "@#{m.sender.username}(#{m.sender.realname})", profile_path(m.sender.username) %></span>
        
        <div class="light-border">
          <%= m.content %>
        </div>
      <span class='reply-time'><%= fa_icon 'clock-o' %> <%= m.created_at.strftime('%Y-%m-%d %H:%M') %></span>        
      </div>
    </div>
  </div>
<% end %>