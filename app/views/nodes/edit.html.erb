<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>修改讨论区</h1>
    <%= form_for @node do |f| %>
      <%= f.label :name, '名称：' %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :icon, '图标：' %>
      <%= f.text_field :icon, class: 'form-control' %>
      <br>
      <%= f.submit '提交', disable_with: '正在修改', class: 'btn btn-primary form-control' %>
    <% end %>
    <br>
    <%= link_to '返回', node_path(id: params[:id]), class: 'btn btn-primary' %>
  </div>
</div>