  <% course = Course.find_by_id(params[:course_id])  %>

  <%= bootstrap_form_for(@node, layout: :horizontal) do |f| %>
    <%= f.text_field :name, label: '名称', class: 'form-control', placeholder: '名称' %>
    <%= f.select :father_id, build_select_values(course), { label: '父节点' }, { class: 'selectpicker'} %>
    <%= f.text_field :icon, label: '图标', class: 'form-control', placeholder: '图标' %>
  <% end %>
  <div class="btn-group btn-group-justified">
    <%= link_to (fa_icon 'arrow-circle-left', text: ' 返回', class: 'fa-fw'), forum_course_path(id: params[:course_id]), class: 'btn btn-default btn-block' %>
    <%= link_to (fa_icon 'arrow-circle-right', text: '添加 ', class: 'fa-fw', right: true), forum_course_path(id: params[:course_id]), class: 'btn btn-primary btn-block' %>
  </div>